extends layout

block content

  .main.container
    include head

    .row
      .col-md-6.col-md-offset-3
        h1.display-6.m-b-2 Reset Password

        form(method='POST' action='/reset')
          div.form-group
            label(for='pass') Password:
            input#pass.form-control(type='password' name='pass')
            input#email.form-control(type='hidden' value=mel name='email')
          button.btn.btn-primary(type='submit') Reset
