extends layout

block content

  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-6.m-b-2 Reset Password

        form(method='POST' action='/reset')
          div.form-group
            p token: #{tk}
          div.form-group
            label(for='pass') Password:
            input#pass.form-control(type='password' name='password')
          div.form-group
            label(for='repass') Retype Password:
            input#repass.form-control(type='password' name='repassword')
          button.btn.btn-primary(type='submit') Reset
