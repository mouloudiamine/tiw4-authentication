extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1= title
        p Welcome to #{title}

    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Sign Up

        // register form, courtesy of https://teamtreehouse.com/library/creating-a-registration-form-with-pug-jade-2
        form#subscribeForm
          div.form-group
            label(for='username') Username:
            input#username.form-control(type='text', placeholder='your_login' name='username')
            span#usernameError.text-danger
          div.form-group
            label(for='email') Email:
            input#email.form-control(type='email', placeholder='name@email.com'  name='email')
            span#emailError.text-danger
          div.form-group
            label(for='pw') Password:
            input#pw.form-control(type='password'  name='password')
            span#passwordError.text-danger
          div.form-group
            label(for='pw2') Confirm Password:
            input#pw2.form-control(type='password' name='confirmPassword')
            span#confirmPasswordError.text-danger
          div.form-group
            div#captcha.g-recaptcha(data-sitekey='6Lc-C8EUAAAAAFDsErO5K5-Wxs-5xAPlTDuwm7XU')
            span#captchaError.text-danger
          input.btn.btn-primary(type='submit' value='Submit')
          
    include ./includes/singup_handler.pug
          