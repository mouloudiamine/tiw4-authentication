extends layout

block content

  .main
    include header
    .container
      unless loginError === undefined
        span#loginError.alert.alert-danger Nom d'utilsateur ou passe incorrect.
      .row
        .col-md-6.col-md-offset-3
          h1.display-4.mt-2 Sign In
          form(method='POST' action='/login')
            div.form-group
              label(for='login') Login:
              input#login.form-control(type='text', placeholder='login' name='login')
            div.form-group
              label(for='pwd') Password:
              input#pwd.form-control(type='password' name='password')
            button.btn.btn-primary(type='submit') Sign In

          p Forget password? <a href="/forget">forget password</a>  or register <a href="/signup">Sign up</a> now !
