extends layout

block content

  .main.container
    include head

    .row
      .col-md-6.col-md-offset-3
        h2.display-6.m-b-2 Reset Password

        form(method='POST' action='/forget')
          div.form-group
            label(for='email') Email:
            input#email.form-control(type='email', placeholder='email' name='email')
          button.btn.btn-primary(type='submit') Reset Password
